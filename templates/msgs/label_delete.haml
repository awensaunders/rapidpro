-extends 'includes/modal.html'

-load i18n

-block modal
  
  -if error
    .alert-text.mb-4
      .title
        -blocktrans with name=object.name
          Uh oh, we couldn't delete {{name}}.
      .message
        {{error}}

  .flex
    .confirm
      -trans "Are you sure you want to delete"
    .name.font-normal.pl-1
      {{object.name}}?

  .hidden
    %form(method="POST")
      %input(type="submit" value="{{submit_button_name}}")