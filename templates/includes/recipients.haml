
.flex.justify-end
  -for group in groups
    .lbl-group.linked.ml-2(onclick="goto(event)" href="{% url 'contacts.contact_filter' group.uuid %}" class="{% if group.is_dynamic%}lbl-group-dynamic{%endif%}")
      {{ group.name }}
  
  -for contact in contacts
    .item.contact
      .icon.icon-user
      %a(href="{% url 'contacts.contact_read' contact.uuid %}")
        {{ contact.get_display }}

  -if query
    .item.query
      .icon.icon-filter
      %a(href="{% url 'contacts.contact_list' %}?search={{ query|urlencode }}")
        {{ query }}
